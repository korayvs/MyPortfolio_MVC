@model List<MyPortfolio_MVC.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Referanslarım</h2>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th>
        <th>Yorum</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>

            <td>@count </td>
            <td>
                <img src="@item.ImageUrl" style="width: 100px; height: 100px;" />
            </td>
            <td>@item.NameSurname </td>
            <td> @item.Title</td>
            <td>@item.Comment </td>


            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a></td>

        </tr>
    }

</table>

<br />
<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-success">Yeni Referans Ekle</a>