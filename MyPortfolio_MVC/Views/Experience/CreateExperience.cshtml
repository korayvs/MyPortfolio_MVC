@model MyPortfolio_MVC.Models.TblExperience
@{
    ViewBag.Title = "CreateExperience";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Yeni Deneyim Ekleme Sayfası</h2>

<form method="post">

    <label>Şirket Adı</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    <br />
    <label>Ünvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Başlama Tarihi</label>
    <input type="date" name="StartDate" class="form-control" />
    <br />
    <label>Bitiş Tarihi <span><strong>(Eğer Devam Ediyorsa Boş Bırakın)</strong></span></label>
    <input type="date" name="EndDate" class="form-control" />
    <br />

    <button class="btn btn-success">Kaydet</button>

</form>